<div class="container">
<h2 class="text-center mt-5">Forgot your password?</h2><hr><br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-field">
    <%= f.label :email ,class: "mb-2"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Enter email address", class:"form-control mb-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-success mt-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>